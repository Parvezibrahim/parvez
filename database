#include <stdio.h>

int main()
{
    int a,b,c;
    printf("Enter the three values\n");
    scanf("%d%d%d",&a,&b,&c);
    if((a>b)&&(a>c))
    
    printf("\n %d is greater than %d and %d",a,b,c);
    else
    if((b>c)&&(b>a))
    printf("\n %d is greater than %d and %d",b,a,c);
    else 
    if((c>a)&&(c>b))
    printf("\n %d is greater than %d and %d",c,b,a);
    else
    printf("YOU HAVE BEEN HACKED");
        return 0;
}
